pipeline {
    agent any
    environment {
        GECKO_DRIVER_URL = 'https://github.com/mozilla/geckodriver/releases/download/v0.29.1/geckodriver-v0.29.1-linux64.tar.gz'
        GECKO_DRIVER_DIR = '/tmp'
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/amirzh004/SRE_final'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh './mvnw clean install'
            }
        }
        stage('Install Firefox and GeckoDriver') {
            steps {
                sh '''
                sudo apt-get update -y
                sudo apt-get install -y firefox
                wget $GECKO_DRIVER_URL -P $GECKO_DRIVER_DIR
                tar -xzf $GECKO_DRIVER_DIR/geckodriver-v0.29.1-linux64.tar.gz -C $GECKO_DRIVER_DIR
                chmod +x $GECKO_DRIVER_DIR/geckodriver
                sudo mv $GECKO_DRIVER_DIR/geckodriver /usr/local/bin/
                echo "Contents of /tmp directory:"
                ls -la $GECKO_DRIVER_DIR
                echo "Checking if geckodriver is executable:"
                if [ -x /usr/local/bin/geckodriver ]; then
                    echo "geckodriver is executable"
                else
                    echo "geckodriver is NOT executable"
                fi
                '''
            }
        }
        stage('Unit Tests') {
            steps {
                sh './mvnw test'
            }
        }
        stage('Build') {
            steps {
                sh './mvnw package'
            }
        }
        stage('Deploy to Staging') {
            steps {
                sh 'docker-compose -f docker-compose.staging.yml up -d'
            }
        }
        stage('Acceptance Tests') {
            environment {
                PATH = "/usr/local/bin:$PATH"
            }
            steps {
                sh '''
                echo "Verifying geckodriver path:"
                which geckodriver
                ls -la /usr/local/bin/geckodriver
                ./mvnw verify -Dtest=com.community.LoginPageAcceptanceTest
                '''
            }
        }
        stage('Deploy to Production') {
            steps {
                input message: 'Deploy to production?', ok: 'Deploy'
                sh 'docker-compose -f docker-compose.production.yml up -d'
            }
        }
        stage('Monitoring') {
            steps {
                sh 'curl -X POST http://localhost:9090/-/reload'  // Reload Prometheus configuration
                sh 'curl -X POST http://localhost:9093/-/reload'  // Reload Alertmanager configuration
            }
        }
    }
    post {
        always {
            echo 'Pipeline completed'
        }
        success {
            echo 'Pipeline succeeded'
        }
        failure {
            echo 'Pipeline failed'
        }
    }
}